<div class="container">
  <h1>Create a new review for <%= @restaurant.name  %></h1>

  <!-- app/views/reviews/_form.html.erb -->
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <% if @review.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.input :content, :label => 'Rewiew text ' %>
    <%= f.input :rating, :label => 'Rating from 0 to 5' %>
    <%= f.button :submit %>
    <!-- [...] all the fields -->
  <% end %>
  <%= link_to "details", restaurant_path(@restaurant.id) %>
</div>
