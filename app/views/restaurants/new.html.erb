<div class="container">

<!-- app/views/restaurants/_form.html.erb -->
<%= simple_form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :name, :label => 'Restaurant name' %>
  <%= f.input :address, :label => 'Restaurant address' %>
  <%= f.input :phone_number, :label => 'Restaurant phone_number' %>
  <%= f.input :category, :label => 'Restaurant category' %>
  <%= f.button :submit %>
  <!-- [...] all the fields -->
<% end %>
</div>
